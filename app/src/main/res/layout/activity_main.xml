<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/windowBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        tools:context=".view.MainActivity">

        <TextView
            android:id="@+id/titleQuizMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuizMaster"
            android:textSize="50sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vyzkoušej své znalosti v různých kategoriích"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleQuizMaster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCategories"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Hrát"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Historie"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnCategories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- DARK MODE BUTTON -->
        <ImageButton
            android:id="@+id/btnDarkModeToggle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_moon"
            android:contentDescription="Tmavý režim"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="14dp"
            app:tint="?android:attr/textColorPrimary"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
